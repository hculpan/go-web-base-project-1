package templates

import "github.com/hculpan/go-web-base-project-1/cmd/web/templates/components"

templ InfoTemplate(appTitle string) {
<!DOCTYPE html>
<html lang="en">

@components.Head(appTitle)

<body>
    <div class="container mt-5">
        <h1>Welcome!</h1>
        <p class="lead">This is the Info page for people who haven't logged in.</p>
        <div>
            <a href="/login" class="btn btn-primary">Login</a>
        </div>
    </div>
</body>

</html>

}