package templates

import "github.com/hculpan/go-web-base-project-1/cmd/web/templates/components"

templ HomeTemplate(appTitle string) {
<!DOCTYPE html>
<html lang="en">

@components.Head(appTitle)

<body>
    <div class="container mt-5">
        <h1>Welcome!</h1>
        <p class="lead">Congratulations, you have successfully logged in to our application.</p>
        <div>
            <a href="/logout" class="btn btn-primary">Logout</a>
        </div>
    </div>
</body>

</html>

}